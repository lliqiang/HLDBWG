<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_circle_img_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    tools:context="com.example.lenovo.calabashiland.View.CIrcleImgView">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/library_text"
        android:layout_centerHorizontal="true"/>
    <com.dalong.francyconverflow.FancyCoverFlow
        android:id="@+id/fancyCoverFlow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width"
        />

    <ImageButton
        android:id="@+id/toBack_CircleView"
        android:layout_width="52dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:src="@mipmap/toback"/>
    <RelativeLayout
        android:id="@+id/linear_circle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@mipmap/bac"
        android:layout_below="@id/fancyCoverFlow">
<TextView
    android:id="@+id/viewpager_slipeFileName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/_3f"
    android:gravity="right"
    android:textColor="#fff"
    android:textSize="20sp"
    android:layout_margin="10dp"
    android:textStyle="bold"/>
        <ImageView
            android:id="@+id/image_circleImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/map_log"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_circleimg"
        android:layout_marginTop="240dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@mipmap/recular_1" />

</RelativeLayout>
